<resources>
    <!-- Base application theme. -->
    <style name="Theme.SocialApp" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <item name="android:windowContentTransitions">true</item>
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/charcoal</item>
        <item name="colorPrimaryVariant">@color/charcoal</item>
        <item name="colorOnPrimary">@color/ivory</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/charcoal</item>
        <item name="colorSecondaryVariant">@color/charcoal</item>
        <item name="colorOnSecondary">@color/charcoal</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">@color/ivory</item>
        <item name="android:windowLightStatusBar">true</item>
        <item name="android:navigationBarColor">@color/ivory</item>
        <item name="android:actionBarTheme">@color/ivory</item>
        <item name="android:textColor">@color/customblack</item>
        <item name="android:indeterminateTint">@color/customblack</item>
        <item name="android:fontFamily">"monospace"</item>
        <!-- Customize your theme here. -->
        <item name="android:windowBackground">@color/ivory</item>
    </style>

    <style name="Theme.SocialApp.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="Theme.SocialApp.NoTitle">
        <item name="windowActionBar">true</item>
        <item name="windowNoTitle">false</item>
    </style>

    <style name="Theme.SocialApp.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="Theme.SocialApp.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="ThemeOverlay.SocialApp.FullscreenContainer" parent="">
        <item name="fullscreenBackgroundColor">@color/light_blue_600</item>
        <item name="fullscreenTextColor">@color/light_blue_A200</item>
    </style>
</resources>